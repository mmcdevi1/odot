<h1 id="todo_list_title"><%= @todo_list.title  %></h1>
<%= link_to "New Todo Item", new_todo_list_todo_item_path %><br>
<%= link_to "Back", root_path %>
<ul class="todo_items">
  <% @todo_list.todo_items.each do |todo_item| %>
    <li id="<%= dom_id(todo_item) %>">
      <%= todo_item.content %>
      <%= todo_item.completed_at %>
      <%= link_to "Edit", edit_todo_list_todo_item_path(@todo_list, todo_item) %> | 
      <%= link_to 'Delete', todo_list_todo_item_path(todo_item), method: :delete, data: { confirm: 'Are you sure?' }  %> | 
      <% if todo_item.completed? %>
      <% else %>
        <%= link_to 'Mark Complete', complete_todo_list_todo_item_path(todo_item), method: :patch %>
      <% end %>
    </li>
  <% end %>
</ul>
